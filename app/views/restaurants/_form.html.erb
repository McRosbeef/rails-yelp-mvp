<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number, as: :string %>
        <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "Select a category" %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
